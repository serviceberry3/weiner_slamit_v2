<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/page2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/choose_calibration"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dip"
            android:text="choose_calibration"
            android:background="@drawable/button3"
            android:textSize="20sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/cal_path_txt"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="Default path is /SLAM/List3.yaml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/finish"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dip"
            android:text="finish and start SLAM"
            android:background="@drawable/button3"
            android:textSize="20sp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calibration file should be a .yaml file that includes the information of the camera"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp" />

</LinearLayout>